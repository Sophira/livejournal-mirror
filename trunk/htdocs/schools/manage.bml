title=>Manage Schools
body<=
<?_code
{
    use strict;
    use vars qw(%GET %POST);

    LJ::need_res('stc/display_none.css');
    LJ::set_active_crumb('schoolsmy');

    my $edit_mode = 1;
    my $edit_sid = undef; # To display edit interface for only one school

    my $ret = '';
    my $err = sub { return "<?h1 Error h1?><?p $_[0] p?>"; };

    return $err->('The Schools Directory is currently disabled due to maintenance.')
        if $LJ::DISABLED{'schools'};

    my %ierr;
    my $bogus = sub {
        my $key = shift;
        my $msg = shift;
        $ierr{$key} = $msg;
        $edit_mode = 1;
    };
    # inline error
    my $inerr = sub {
        my $key  = shift;
        my $pre  = shift || '';
        my $post = shift || '';
        return '' unless $ierr{$key};
        return "$pre<font color='red'><b>$ierr{$key}</b></font>$post";
    };

    my $remote = LJ::get_remote();
    return "<?needlogin?>" unless $remote;
    my $authas = $GET{'authas'} || $remote->{'user'};
    my $u = LJ::get_authas_user($authas);
    return LJ::bad_input("You could not be authenticated as the specified user.")
        unless $u;

    # extra arguments for get requests
    my $getextra = $authas ne $remote->{'user'} ? "?authas=$authas" : '';

    # In the display case we will load this here and just use it directly
    # If we do any edits, we will reload it before display
    my $schools = LJ::Schools::get_attended($u);

    # if we posted, then we're updating something... see what we did
    if (LJ::did_post()) {
        if ($schools && %$schools) {
            foreach my $sid (keys %$schools) {
                if ($POST{"$sid:delete"}) {
                    my $rv = LJ::Schools::delete_attended($u, $sid);
                    $bogus->($sid, 'Error deleting school attendance record, please try again.')
                        unless $rv;
                    next;
                }

                my $year_start = $POST{"$sid:year_start"};
                my $year_end   = $POST{"$sid:year_end"};

                # Do they not want any date?
                undef $year_start if $year_start eq '';

                if ($year_end && !defined $year_start) {
                    $bogus->($sid, 'You must specify a starting year if you specify an ending year.');
                    next;
                }

                # See if they mean present
                if ($year_end eq 'now' || $year_end eq '') {
                    undef $year_end;
                }

                # Check they didn't start there before 1900
                if (defined $year_start && $year_start+0 < 1900) {
                    $bogus->($sid, 'Did you really attend this school that long ago?');
                    next;
                }

                # Check that the end year is valid
                my $year_now = ((gmtime())[5]) + 1900;
                if (defined $year_end && $year_end+0 > $year_now) {
                    $bogus->($sid, 'If you currently attend this school, you should leave the end date field blank or enter "now".');
                    next;
                }

                # Check for starting later than current year
                if (defined $year_start && $year_start+0 > $year_now) {
                    $bogus->($sid, 'You must specify a starting year in the past or present.');
                    next;
                }

                # Don't let them do 2000 - 1999
                if (defined $year_end && $year_end < $year_start) {
                    $bogus->($sid, 'Your ending year cannot be earlier than your starting year.');
                    next;
                }

                my $rv = LJ::Schools::set_attended($u, $sid, { year_start => $year_start, year_end => $year_end });
                $bogus->($sid, 'Error adding school attendance record, please try again.  You may have reached the limit of schools you can attend.')
                    unless $rv;
            }
            $schools = LJ::Schools::get_attended($u);
        }

    # See if they are adding a new school
    } elsif ($GET{sid}+0 > 0 && $GET{ctc} && $GET{cc} && LJ::check_referer('/schools/')) {
        my $sid = $GET{sid}+0;

        unless (defined $schools->{sid}) {
            my $new_school = LJ::Schools::load_schools($sid);
            return LJ::bad_input('Unable to load school specified')
                unless $new_school;

            return LJ::bad_input('Country and/or city do not match specified school')
                if $GET{ctc} ne $new_school->{$sid}->{country} || $GET{cc} ne $new_school->{$sid}->{city};

            unless (defined $schools->{$sid}) {
                my $rv = LJ::Schools::set_attended($u, $sid);
                return LJ::bad_input("Unable to set your attendance at $new_school->{$sid}->{name}, please try again.  You may have reached the limit of schools you can attend.")
                    unless $rv;
                $schools = LJ::Schools::get_attended($u);
            }
        }

        $edit_sid = $sid;

    # Do we want to just highlight a row?
    } elsif ($GET{sid}+0 > 0) {
        $edit_sid = $GET{sid}+0;
    }

    # Header
    $ret .= "<?p Below you can edit the list of schools associated with your journal or communities.  This information is public, if you provide it.  p?>";

    # user switcher
    $ret .= "<form method='get' action='manage.bml'>\n";
    $ret .= LJ::make_authas_select($remote, { 'authas' => $GET{'authas'}, 'label' => '<b>See schools for:</b> ' });
    $ret .= "</form>\n\n";

    # must not have posted, dump what schools we've attended
    if ($schools && %$schools) {
        my $authas = $GET{authas} ? "?authas=$GET{authas}" : '';
        $ret .= "<form action='manage.bml$authas' method='post'>";
        $ret .= '<table align="center" cellpadding="5">';

        $ret .= "<tr class='shead'><th>School name</th></td><th>Years attended</th></tr>\n";

        foreach my $sid (sort { $schools->{$a}->{year_start} <=> $schools->{$b}->{year_stat},
                                $schools->{$a}->{name} cmp $schools->{$b}->{name} } keys %$schools) {
            # sorted schools
            my $year_start = $schools->{$sid}->{year_start};
            my $year_end   = $schools->{$sid}->{year_end} || 'present';
            undef $year_end unless defined $year_start;

            my $rowclass = $edit_sid == $sid ? 'highlight' : '';
            my $link = "$LJ::SITEROOT/schools/?ctc=" . LJ::eurl($schools->{$sid}->{country}) .
                       "&sc=" . LJ::eurl($schools->{$sid}->{state}) .
                       "&cc=" . LJ::eurl($schools->{$sid}->{city}) .
                       "&sid=$sid";
            $ret .= "<tr class='$rowclass'><th style='text-align: left'><a href='$link'>" . LJ::ehtml($schools->{$sid}->{name}) . "</a></th><td>";

            $ret .= "<div id='$sid:edittime'>(";
            $ret .= LJ::html_text({name => "$sid:year_start", value => $year_start, size => 4, maxlength => 4}) . ' to ';
            $ret .= LJ::html_text({name => "$sid:year_end", value => $year_end eq 'present' ? 'now' : $year_end, size => 4, maxlength => 4});
            $ret .= ') ' . LJ::html_check({name => "$sid:delete", id => "$sid:delete"}) . "<label for='$sid:delete'>Delete</label>";
            $ret .= $inerr->($sid, '<br />') . "</div>";

            $ret .= '</td></tr>';
        }

        $ret .= "<tr><td>&nbsp;</td><td align='left'><div id='save'>";
        $ret .= LJ::html_submit('save', 'Save Changes') . '</div></td></tr>';
        $ret .= '</table></form>';
        $ret .= "<?p <a href='/schools/'>Find another school</a> to add. p?>";
    } else {
        $ret .= "<?p You have not listed any schools.  <a href='/schools/'>Browse the school directory</a> to find and add schools.</a> p?>";
    }

    return $ret;
}
_code?>
