<script language='JavaScript'>
    function edit(sid) {
        if (!document.getElementById) {
            return true;
        }

        var d = document.getElementById(sid+':showtime');
        var e = document.getElementById(sid+':edittime');
        var s = document.getElementById('save');
        if (!d || !e || !s) {
            return true;
        }

        d.className = 'display_none';
        e.className = '';
        s.className = '';
        return false;
    }
</script>
<style>
    .highlight { background: <?emcolor?> }
    tr.shead th { text-align: left; text-weight: normal; font-style: italic;  }
</style>
