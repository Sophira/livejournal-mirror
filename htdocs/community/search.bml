<OPTION VALUE="user">(=_ML .sel.username _ML=)
</SELECT>
</TD></TR>

<TR>
<TD ALIGN=RIGHT>
(=_ML .label.records _ML=)
</TD><TD>
<SELECT NAME="opt_pagesize">
