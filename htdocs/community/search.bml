<!--- location --->
(=CRIT
NAME=>(=_ML .label.bylocation _ML=)
CODE=>s_loc
FORM<=

<TABLE>
<TR><TD ALIGN=RIGHT>(=_ML .label.country _ML=)</TD><TD>
<SELECT NAME="loc_cn">
(=_CODE

 my $dbs = LJ::get_dbs();
 LJ::load_codes($dbs, { "country" => \%countries });
 my $ret = "";
 foreach (sort { $countries{$a} cmp $countries{$b} } keys %countries)
 {
     my $sel = $_ eq "US" ? " SELECTED" : "";
     $ret .= "<OPTION VALUE=\"$_\"$sel>$countries{$_}\n";
 }
 return $ret; 
 
_CODE=)
</SELECT></TD></TR>
<TR><TD ALIGN=RIGHT>(=_ML .label.stateprovince _ML=)</TD><TD><INPUT NAME="loc_st"></TD></TR>
<TR><TD ALIGN=RIGHT>(=_ML .label.city _ML=)</TD><TD><INPUT NAME="loc_ci"></TD></TR>
</TABLE>

<=FORM
CRIT=)

<!---- update time ----->
(=CRIT
NAME=>(=_ML .label.bytime _ML=)
CODE=>s_ut
FORM<=
(=_ML .label.updated _ML=)
<SELECT NAME="ut_days">
<OPTION VALUE="">-------
<OPTION VALUE="1">(=_ML .sel.day _ML=)
<OPTION VALUE="7">(=_ML .sel.week _ML=)
<OPTION VALUE="30">(=_ML .sel.month _ML=)
</SELECT>
<=FORM
CRIT=)

<!---- interest ----->
(=CRIT
NAME=>(=_ML .label.byinterest _ML=)
CODE=>s_int
