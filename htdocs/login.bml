<INPUT TYPE="radio" NAME="expire" VALUE="close" CHECKED id="close"> <LABEL FOR="close">When browser closes</LABEL><BR>
<INPUT TYPE="radio" NAME="expire" VALUE="never" id="never"> <LABEL FOR="never">Never</LABEL>
