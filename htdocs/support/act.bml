 $dbs = LJ::get_dbs();
 $dbh = $dbs->{'dbh'};
 $dbr = $dbs->{'reader'};

 my $cmd = BML::get_query_string();
 if ($cmd =~ /^(\w+);(\d+);(\w{15})(?:;(\d+))?$/) {
     ($action, $spid, $authcode, $splid) = ($1, $2, $3, $4);
 }
 $title = "Error";
 if ($action eq "touch") {
     $title = "Request #$spid";
 }
 if ($action eq "close") {
     $title = "Request #$spid";
